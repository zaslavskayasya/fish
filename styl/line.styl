span[data-wrapper='start'] {
    position: relative;
}

.wrapper-line {
    position: fixed;
    // z-index: -1;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100vw;
    height: 60vh;
    background: url('../img/linehook.svg') no-repeat center top;
    background-size: 1370px;
    opacity: 0;
    transition: opacity 0.1s ease-out;
    pointer-events: none;
}
