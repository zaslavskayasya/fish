.footer
    padding-top 50px;
    .logo 
        width: 100px

.footer-columns
    display: flex
    justify-content: space-between
    padding-bottom 30px;
    .item
        width: 25% 

.footer-nav-ul
    display: flex 
    flex-direction: column
    list-style: none
    padding-left: 0px
    margin-top 0px

    .footer-nav-item:not(:last-child)
        padding-bottom 25px

.footer-nav-link
    font-family: inherit;
    font-style: normal;
    font-weight: normal;
    font-size: 14px;
    line-height: 17px;
    color: dark-color;
    transition: all 0.3s ease

.footer-nav-link:hover
    color: accent-color

.footer-outs 
    display: flex 
    flex-direction: column
    justify-content: space-between

.socials
    display: flex
    align-items: center
    .soc-link 
        height: 50px 
        max-width: 150px
        margin-right 10px;
        margin-top -10px
        transition: all 0.3s ease

        // svg  
        //     width: 100% 
    .youtube-svg 
        width: 30px
        &:hover
            .youtube-svg-or
                fill accent-color

    .fb-svg
        width: 20px
        &:hover
            .fb-svg-or
                fill accent-color
    .inst-svg 
        width: 20px;
        &:hover
            .inst-svg-or
                fill accent-color

.adress 
    font-family: inherit;
    font-style: normal;
    font-weight: normal;
    font-size: 14px;
    line-height: 17px;
    max-width: 200px


.copyright
    border-top: 1px solid #EDEDED
    padding-bottom 5px

.copy 
    font-family: Inter;
    font-style: normal;
    font-weight: normal;
    font-size: 14px;
    line-height: 110.5%;
    /* or 15px */
    letter-spacing: 0.03em;
    color: #5B5B5B;    


@media (max-width: 1440px)
    .footer
        padding-top: 37px;

@media (max-width: 760px)
    .footer-columns
        flex-flow: wrap
        .item
            width: 33%
        .item:first-child
            width: 100%	
            margin-bottom 20px;

@media (max-width: 560px)
    .footer-columns
        .item
            width: 50%
            margin-bottom 20px;
        .item:first-child
            width: 100%	
            margin-bottom 20px;
    .footer-nav-ul .footer-nav-item:not(:last-child)
        padding-bottom: 14px;
    .copy
        font-size: 12px;    
        